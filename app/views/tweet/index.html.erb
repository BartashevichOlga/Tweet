<div id="success-alert">
  <% flash.each do |type, message| %>
      <div class="alert <%= bootstrap_class_for(type) %>">
        <button class="close" data-dismiss="alert">Ã—</button>
        <%= message %>
      </div>
  <% end %>
</div>
<div class="content">
  <% if user_signed_in? %>
      <%= render 'layouts/tform' %>
  <% else %>
      <h2>Please login to tweet</h2>
      <div class="btnsignout">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <%= button_to "Sign in", user_twitter_omniauth_authorize_path, class: "btn btn-info" %>
          </div>
        </div>
      </div>
      </div>
  <% end %>
  <% content_for :after_css do %>
      <%= stylesheet_link_tag 'pages/tweet/index' %>
  <% end %>
  <% content_for :after_js do %>
      <%= javascript_include_tag 'pages/tweet/index' %>
  <% end %>
